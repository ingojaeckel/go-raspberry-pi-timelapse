{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Launch - macOS Debug",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/object_detection",
            "args": ["--help"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "build-debug",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for lldb",
                    "text": "settings set target.process.follow-fork-mode child",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(lldb) Launch - macOS Debug (No Args)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/object_detection",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        },
        {
            "name": "(lldb) Attach to Process",
            "type": "lldb",
            "request": "attach",
            "program": "${workspaceFolder}/build/object_detection",
            "processId": "${command:pickProcess}",
            "MIMode": "lldb"
        },
        {
            "name": "(gdb) Launch - Linux Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/object_detection",
            "args": ["--help"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "build-debug",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Launch - Linux Debug (No Args)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/object_detection",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb"
        }
    ]
}
