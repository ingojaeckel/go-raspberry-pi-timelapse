{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Launch - macOS Debug",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/object_detection",
            "args": ["--verbose"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "build-debug",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for lldb",
                    "text": "settings set target.process.follow-fork-mode child",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(lldb) Launch - macOS Debug (No Args)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/object_detection",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        },
        {
            "name": "(lldb) Attach to Process",
            "type": "lldb",
            "request": "attach",
            "program": "${workspaceFolder}/build/object_detection",
            "processId": "${command:pickProcess}",
            "MIMode": "lldb"
        },
        {
            "name": "(gdb) Launch - Linux Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/object_detection",
            "args": ["--help"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "build-debug",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Launch - Linux Debug (No Args)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/object_detection",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb"
        },
        {
            "name": "Profile: CPU (macOS)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build-profile/object_detection",
            "args": ["--max-fps", "10", "--verbose"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build-profile",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "build-profile"
        },
        {
            "name": "Profile: CPU (Linux)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build-profile/object_detection",
            "args": ["--max-fps", "10", "--verbose"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build-profile",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "build-profile"
        },
        {
            "name": "Profile: Memory - Valgrind (Linux)",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/valgrind",
            "args": [
                "--leak-check=full",
                "--show-leak-kinds=all",
                "--track-origins=yes",
                "--verbose",
                "--log-file=${workspaceFolder}/profiling_results/valgrind_vscode.log",
                "${workspaceFolder}/build-profile/object_detection",
                "--max-fps", "3", "--verbose"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build-profile",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "build-profile"
        },
        {
            "name": "Profile: Performance Test",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build-profile/object_detection",
            "args": ["--max-fps", "15", "--enable-burst-mode", "--verbose"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build-profile",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "build-profile"
        }
    ]
}
